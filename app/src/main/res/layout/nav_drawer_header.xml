<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_drawer_header_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_double"
        android:contentDescription="@string/app_logo"
        android:src="@mipmap/ic_tasks_logo_foreground" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_one_third"
        android:layout_marginBottom="@dimen/margin_default"
        android:text="@string/user_name_placeholder"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_double" />
</LinearLayout>