<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Section35_Tasks" parent="Theme.Material3.DayNight.NoActionBar">
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Section35_Tasks" parent="Base.Theme.Section35_Tasks" />

    <style name="DefaultButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingStart">@dimen/padding_quadruple</item>
        <item name="android:paddingEnd">@dimen/padding_quadruple</item>
        <item name="android:paddingTop">@dimen/padding_half</item>
        <item name="android:paddingBottom">@dimen/padding_half</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_width">@dimen/full_constraint_width</item>
        <item name="android:layout_height">@dimen/touch_target_height</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constraintWidth_max">@dimen/edit_text_max_width</item>
        <item name="android:drawablePadding">@dimen/padding_one_third</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>

    <style name="DefaultToolbar">
        <item name="android:layout_width">@dimen/full_constraint_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>